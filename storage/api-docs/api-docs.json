                            ]
                        },
                        "nullable": true,
                        "additionalProperties": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "type": "object"
            },
            "SolicitudAdopcion": {
                "required": [
                    "id",
                    "user_id",
                    "animal_id",
                    "estado"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "user_id": {
                        "type": "integer",
                        "example": 5
                    },
                    "animal_id": {
                        "type": "integer",
                        "example": 2
                    },
                    "estado": {
                        "type": "string",
                        "enum": [
                            "pendiente",
                            "aprobada",
                            "rechazada"
                        ],
                        "example": "pendiente"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
